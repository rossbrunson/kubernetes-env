# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
    config.vm.define "vbx-ctrlp-1" do |v1|
        v1.vm.box = "ubuntu/focal64"
        v1.vm.network :private_network, ip: "10.253.253.11"
        v1.vm.hostname = "vbx-ctrl-1"
        v1.vm.cloud_init :user_data, content_type: "text/cloud-config", path: "cloud.cfg"
        v1.vm.cloud_init :user_data, content_type: "text/x-shellscript", path: "modify-kubelet.sh"
        v1.vm.provider :virtualbox do |v|
            v.memory = 2048
            v.cpus = 2
        end
        v1.vm.provision "shell", inline: "sed -i 's/\(^Exec.*ARGS$\)/\1 --node-ip=10.253.253.11/'' /etc/systemd/system/kubelet.service.d/10-kubeadm.conf"
    end

    NodeCount = 2

    (1..NodeCount).each do |i|
        config.vm.define "vbx-wrker-#{i}" do |node|
            node.vm.box = "ubuntu/focal64"
            node.vm.network :private_network, ip: "10.253.253.1#{i+1}"
            node.vm.hostname = "vbx-wrker-#{i}"
            node.vm.cloud_init :user_data, content_type: "text/cloud-config", path: "cloud.cfg"
            node.vm.cloud_init :user_data, content_type: "text/x-shellscript", path: "modify-kubelet.sh"
            node.vm.provider :virtualbox do |v|
                v.memory = 2048
                v.cpus = 2
            end
            node.vm.provision "shell", inline: "sed -i 's/\(^Exec.*ARGS$\)/\1 --node-ip=10.253.253.1#{i+1}/' /etc/systemd/system/kubelet.service.d/10-kubeadm.conf"
        end
    end

    config.vm.box_check_update = false
    config.vbguest.auto_update = false
    config.vm.boot_timeout = 600
end